
<%= render 'shared/navbar/navbarNormal' %>
        <br><br><br>
        <br><br><br><br>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 npm">
            <figure>
                <%= image_tag(@article.image.url(:large))%>
            </figure>
        </div> 
<article class="container_fluid test_wrap npm padding-bottom8"> 

        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 h50p1 fixed_blog"><br><br><br><br><br>
        <div class="container_social_share">
            <%= social_share_button_tag(@article.title, :popup => "true", class: "social_share_shift") %></div>
        </div>


        <div class="col-lg-6 col-md-7 col-sm-7 col-xs-12 col-lg-offset-1 col-md-offset-1 col-sm-offset-0">
            <% if user_signed_in? %>
            <p class="pull-right"><%= link_to 'Destroy', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: "black" %>
            <%= link_to 'Edit', edit_article_path(@article), class: "black" %></p>
            <% end %>
            <br>
            <p class="pull-right"><%= link_to 'Back', articles_path, class: "black" %></p>
                
            

                <h3 class="header_article"><%= @article.title %></h3>
                    <p class="bold"><%= @article.created_at.strftime("%d %b. %Y") %> - <%= @article.consumeTime %> min read</p>

                    <hr class="article_show_hr">

                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3 npm">
                <figure class="user_avatar"><%= image_tag('avatar.jpg',class: 'full_width')%></figure>
                </div>


                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4 pull-right npm">
                    <h6>by Yugesh Raghoenath<br><br>Twitter handle</h6>
                </div>     


                <p class="col-lg-12 col-md-12 col-sm-12 col-xs-12 npm"><br><%= @article.content %></p>
                          
        </div>

        <div class="col-lg-4 col-md-4 col-sm-5 col-xs-12 col-lg-offset-0 col-md-offset-0 col-sm-offset-0">
            <div class="subscribe_container bgb">
                <h1 class="white alignright">Subscribe voor Exclusieve content.</h1>
                <div class="white subform_wrapper"><%=render('shared/sub_form')%><br></div>
            </div>
                <ul class="social_links">
                    <li class="sm_list"><button class="sm_button_bw"><%= link_to image_tag("icon_bw_tw.png"), 'https://www.twitter.com' %></button></li>
                    <li class="sm_list"><button class="sm_button_bw"><%= link_to image_tag("icon_bw_ig.png"), 'https://www.instagram.com' %></button></li>
                    <li class="sm_list"><button class="sm_button_bw"><%= link_to image_tag("icon_bw_fb.png"), 'https://www.facebook.com' %></button></li>
                    <li class="sm_list"><button class="sm_button_bw"><%= link_to image_tag("icon_bw_yt.png"), 'https://www.youtube.com' %></button></li>
                </ul>

            <div class="must_read_container">
                <h2 class="alignright">Must Read!</h2>
                <figure></figure>
                <h3 >Test Titel</h3>
                <hr>
                <p>Dit artikel gaat over blablabla</p>  

            </div>

        </div>

    <div class="clearfix"></div>


</article>

